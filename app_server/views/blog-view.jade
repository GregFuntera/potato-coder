extends layout
include _includes/blog-sidebar.jade

block content
  .container
    .row.mt-3
      .col-md-8.col-xs-12.m-auto
        .blog-view-card.mb-2
          .mdl-card.mdl-shadow--2dp.w-100.mt-2
            .mdl-card__title.mdl-card--expand(style="background: url(#{featured_photo}) center / cover; height: 500px;")
            .blog-view-title-container.text-center  
              h4 #{title}
              p #{created_at}
            .mdl-card__supporting-text.text-justify.w-100 !{body}
