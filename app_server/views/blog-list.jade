extends layout
//- extends blog-sidebar

block content
  #header-title.card.w-100.bg-dark
    .card-body 
      h3.text-light This is my title header
  // Blog container
  .blog-container.d-flex.flex-wrap.justify-content-center.p-1
    .blog-cards-container.mr-auto.p-1
      h1 #{message}
      each topic in topics
        // Blog card
        .blog-card.mdl-card.mdl-shadow--2dp.w-100.mt-2
          .mdl-card__title(style="background: url(#{topic.featured_photo}) center/cover;")
            h2.mdl-card__title-text #{topic.title}
          .mdl-card__supporting-text.w-100.blog-summmary #{topic.summary}
          .mdl-card__actions.mdl-card--border
            a(href="/blog/#{topic._id}").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect Read More
      // End: Blog card 
    // End: Blog container
    // Sidebar container  
    .sidebar-container.p-1
      .author-card.mdl-card.mdl-shadow--2dp.w-100.mt-2
        .mdl-card__title.mdl-card--expand
          h2.mdl-card__title-text Author
        .mdl-card__supporting-text.text-center 
          p.m-0 Code 
            i.material-icons code
          p.m-0 
            i.material-icons group
            span Share
          p.m-0 Repeat
            i.material-icons autorenew
      .archive-card.mdl-card.mdl-shadow--2dp.w-100.mt-2
        .mdl-card__title
          h4 Archives
        .mdl-card__actions.mdl-card--border
          #accordion
            .card.archive-cards
              #headingOne.card-header
                h5.mb-0
                  button.btn.btn-link(data-toggle="collapse", data-target="#collapseOne", aria-expanded="true", aria-controls="collapseOne")#archive-year 
                    span 2018
                    i.material-icons today
              #collapseOne.collapse.show(aria-labelledby="headingOne", data-parent="#accordion")
                .card-body
                  a(href="#") Hello Sample Title here....
            // End: Accordion Content
            .card.archive-cards
              #headingOne.card-header
                h5.mb-0
                  button.btn.btn-link(data-toggle="collapse", data-target="#collapseTwo", aria-expanded="true", aria-controls="collapseTwo")#archive-year 
                    span 2017
                    i.material-icons today
              #collapseTwo.collapse.show(aria-labelledby="collapseTwo", data-parent="#accordion")
