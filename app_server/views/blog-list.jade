extends layout
include _includes/blog-sidebar.jade

block content
  //- Blog container
  .blog-container.row
    .blog-cards-container.col-md-8.col-sm-12
      if message
        h1 #{message}
        //- Blog card
      .row
        each topic in topics
          .col-md-6.col-sm-12.mt-3
            .blog-card.mdl-card.mdl-shadow--2dp.w-100.mt-2.mb-2
              .mdl-card__title(style="background: url(#{topic.featured_photo}) center/cover;")
              h2.mdl-card__title-text.w-100.pl-3.pt-3 #{topic.title}
              .mdl-card__supporting-text.w-100.blog-summmary #{topic.summary}
              .mdl-card__actions.mdl-card--border
                a(href="/blog/#{topic._id}").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect Read More
        //- End: Blog card 
      //- End: Blog container
    .blog-sidebar-container.col-md-4.col-sm-12.mt-3
      //- .sample-container(style="height: 800px; background: blue;")
      +archives(archives)


  

    
